<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rootSeleccion"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Preferencias"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="8dp"
            android:text="Estos elementos permiten selecciones únicas o múltiples."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Aficiones -->
        <TextView
            android:layout_marginTop="20dp"
            android:text="Aficiones (múltiple)"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/cbDeporte"
            android:text="Deporte"
            android:tag="Deporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/cbMusica"
            android:text="Música"
            android:tag="Música"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/cbLectura"
            android:text="Lectura"
            android:tag="Lectura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Nivel -->
        <TextView
            android:layout_marginTop="20dp"
            android:text="Nivel de experiencia (única)"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/rgNivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbPrincipiante"
                android:text="Principiante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/rbIntermedio"
                android:text="Intermedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/rbAvanzado"
                android:text="Avanzado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- Perfil público -->
        <TextView
            android:layout_marginTop="20dp"
            android:text="Visibilidad"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swPublico"
            android:text="Perfil público"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
